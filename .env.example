# Environment variables for Wazobia Agent
# Copy this file to .env and fill in your values

# Application settings
WAZOBIA_ENVIRONMENT=development
WAZOBIA_DEBUG=true

# API Configuration
WAZOBIA_API_HOST=0.0.0.0
WAZOBIA_API_PORT=8000

# ==================================================
# LLM PROVIDER CONFIGURATION
# ==================================================
# Choose one: anthropic, groq, or openai
# Just change WAZOBIA_LLM_PROVIDER and add the corresponding API key
WAZOBIA_LLM_PROVIDER=anthropic

# --------------------------------------------------
# ANTHROPIC (Claude)
# --------------------------------------------------
WAZOBIA_ANTHROPIC_API_KEY=your-anthropic-key-here
# Get key at: https://console.anthropic.com/
# Models: claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022, claude-3-opus-20240229

# --------------------------------------------------
# GROQ (Llama 3) - Free & Fast
# --------------------------------------------------
# WAZOBIA_GROQ_API_KEY=your-groq-api-key-here
# Get key at: https://console.groq.com/
# Models: llama-3.3-70b-versatile, llama-3.1-8b-instant, mixtral-8x7b-32768

# --------------------------------------------------
# OPENAI (GPT)
# --------------------------------------------------
# WAZOBIA_OPENAI_API_KEY=sk-your-openai-key-here
# Get key at: https://platform.openai.com/api-keys
# Models: gpt-4o, gpt-4-turbo, gpt-4, gpt-3.5-turbo

# --------------------------------------------------
# Model Configuration
# --------------------------------------------------
WAZOBIA_DEFAULT_MODEL=claude-3-5-sonnet-20241022
WAZOBIA_TEMPERATURE=0.7
WAZOBIA_MAX_TOKENS=2000

# Knowledge Base
# WAZOBIA_KNOWLEDGE_BASE_PATH=/path/to/data
WAZOBIA_USE_EMBEDDINGS=false

# Agent Settings
WAZOBIA_MAX_CONVERSATION_HISTORY=10
WAZOBIA_RETRIEVAL_TOP_K=5

# Logging
WAZOBIA_LOG_LEVEL=INFO
# WAZOBIA_LOG_FILE=wazobia_agent.log

# Rate Limiting
WAZOBIA_RATE_LIMIT_ENABLED=true
WAZOBIA_RATE_LIMIT_REQUESTS=100
WAZOBIA_RATE_LIMIT_PERIOD=60
